	$xml[] = '								<text type="zone"></text>';
	$xml[] = '							</sequence>';
	$xml[] = '							<animator type="custom">';
	$xml[] = '								<key pos="0,0,1" time="0" />';
	$xml[] = '								<key pos="0,0,1" time="3.3" />';
	$xml[] = '								<key pos="0,0,0.1" time="3.6" />';
	$xml[] = '								<key pos="0,0,0" time="3.8" />';
